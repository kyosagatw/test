        <li>30, 0.6</li>
        <li>60, 0.8</li>    <!-- 60 天後開始回升 -->
        <li>120, 1.0</li>   <!-- 中世紀：恢復正常 -->
    </points>
</pointsFactorFromAdaptDays>

