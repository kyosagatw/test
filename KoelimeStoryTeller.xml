<!-- 0～30 天：完全安全期（無任何入侵者） -->
<!-- 不需要特別寫一個 0 天 on 的小威脅，
     直接用 minDaysPassed=30，讓 ThreatSmall 至少過 30 天才能啟動 -->

<!-- 小威脅（ThreatSmall）：30 天前禁止 -->
<StorytellerCompProperties_OnOffCycle>
    <compClass>StorytellerComp_OnOffCycle</compClass>
    <incident>ThreatSmall</incident>
    <onDays>1</onDays>              <!-- 開啟 1 天 -->
    <offDays>14</offDays>           <!-- 關閉 14 天 = 大約半個月一次 -->
    <minDaysPassed>30</minDaysPassed>  <!-- 30 天前完全不會有小威脅 -->
    <minThreatPoints>50</minThreatPoints>  <!-- 小型野獸、1～2 人盜賊 -->
</StorytellerCompProperties_OnOffCycle>

<!-- 大威脅（ThreatBig）：60 天前禁止 -->
