<!--   C-4：適應度成長速度 -->
<!-- ============================= -->

<adaptDaysGrowthRateCurve>
    <points>
        <li>0, 1.2</li>     <!-- 前期適應度成長快（保護玩家） -->
        <li>30, 1.0</li>
        <li>60, 0.8</li>    <!-- 60 天後開始變慢 -->
        <li>120, 0.6</li>   <!-- 中世紀時期：適應度影響變小 -->
    </points>
</adaptDaysGrowthRateCurve>

